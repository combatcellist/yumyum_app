<div class="item-form">
  <%= form_with model:@item, url: items_path, method: :post, local: true do |f| %>
    <div class="img-upload">
      <div class="click-upload">
          <p>クリックして画像ファイルをアップロード</p>
          <%= f.file_field :images, multiple: true, id:"item-image" %>
      </div>
    </div>

    <div class="new-items">
      <div class="weight-bold-text">
        メニュー名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :title, class:"items-text", id:"item-name", placeholder:"メニュー名(必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          メニューの説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :content, class:"items-text", id:"item-info", placeholder:"メニューの説明(必須 1,000文字まで)", maxlength:"1000" %>
      </div>
    </div>

    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>販売価格<br>(300~9,999,999円以内)</span>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例) 300" %>
        </div>
      </div>
    </div>

    <div class="sell-btn-contents">
      <%= f.submit "投稿する", class:"button" %>
      <%= link_to "戻る", root_path, class:"back-btn" %>
    </div>

  <% end %>
</div>