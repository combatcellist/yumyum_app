<div class="order-form">
  <%= form_with  model: @order, url: item_orders_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
  <%# <%= render 'shared/error_messages', model: f.object %>
  <div class='credit-card-form'>
      <h1 class='info-input-haedline'>
        クレジットカード情報入力
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">カード情報</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :number, class:"input-default", id:"order-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
        
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">有効期限</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-expiration-date-wrap'>
          <%= f.text_field :exp_month, class:"input-expiration-date", id:"order-exp-month", placeholder:"例)3" %>
          <p>月</p>
          <%= f.text_field :exp_year, class:"input-expiration-date", id:"order-exp-year", placeholder:"例)23" %>
          <p>年</p>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">セキュリティコード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :cvc, class:"input-default", id:"order-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
      </div>
    </div>
     <div class='buy-btn'>
      <%= f.submit "購入" ,class:"buy-red-btn" %>
    </div>
    <% end %>
  </div>
</div>