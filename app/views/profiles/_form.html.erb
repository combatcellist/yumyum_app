<%= form_with model: @profile, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "ニックネーム" %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :detail, "お一言" %>
    <%= f.text_field :detail %>
  </div>

  <div class="form-group">
    <%= f.label :image, "プロフィール画像"%>
    <%= f.file_field :image %>
  </div>
    
    <div class="submit-block">
      <%= f.submit "作成する", class: "button" %>
    </div>
  <% end %>